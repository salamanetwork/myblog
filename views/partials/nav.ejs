<body class="bg-lightest-blue">
  <div class="container">


    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-secondary border-bottom fixed-top box-shadow">
      <% if(USER_LOGGED) { %>
        <h5 class="my-0 mr-md-auto font-weight-normal text-warning">
          <%- title + " ( " + '<a class="text-light" href="/profile/' + USER_ID + '">' + USER_FULL_NAME + '</a>' + " ) " %>
        </h5>
        <% } else { %>
          <h5 class="my-0 mr-md-auto font-weight-normal text-warning"><%= title %></h5>
          <% } %>
            <nav class="my-2 my-md-0 mr-md-3">
              <a class="p-2 text-white" href="/">Home</a>
              <a class="p-2 text-white" href="/about">About</a>
              <a class="p-2 text-white" href="/post/add">Add Post</a>
              <% if(USER_LOGGED) { %>
                <a class="p-2 text-white" href="/logout">Logout</a>
                <% } else { %>
                  <a class="p-2 text-white" href="/login">Login</a>
                  <a class="p-2 text-white" href="/register">Register</a>
                  <% } %>
            </nav>
    </div>

    <div class="w-100 p-5"></div>
